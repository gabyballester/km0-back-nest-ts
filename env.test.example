# Test Environment Configuration
# Copy this file to .env.test and update values

# Server Configuration
NODE_ENV=test
PORT=4001
HOST=localhost

# Database Configuration (Drizzle for testing)
DATABASE_URL=postgresql://postgres:password@localhost:5432/km0_test
DATABASE_ORM=drizzle

# Security (Test keys - DO NOT USE IN PRODUCTION)
JWT_SECRET=test-jwt-secret-key-for-testing-only-32-chars
COOKIE_SECRET=test-cookie-secret-key-for-testing-only-32-chars
JWT_EXPIRES_IN=1h

# Rate Limiting (Minimal for testing)
THROTTLE_TTL=60
THROTTLE_LIMIT=10000

# CORS (Test origins)
CORS_ORIGIN=http://localhost:3001

# Logging (Minimal for testing)
LOG_LEVEL=error

# Test specific
SEED_ENABLED=true
SEED_DATA_PATH=./data/seed-test.json
