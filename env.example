# Server Configuration
NODE_ENV=production
PORT=8000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database_name
DATABASE_ORM=drizzle # or 'prisma' (drizzle recommended for all environments)

# Security (REQUIRED - Generate strong secrets)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
COOKIE_SECRET=your-super-secret-cookie-key-at-least-32-characters-long
JWT_EXPIRES_IN=1d

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info

# Database Safety System (REQUIRED)
# Levels: paranoid|strict|relaxed|disabled
# paranoid: Blocks ALL operations in production
# strict: Blocks destructive operations (RECOMMENDED)
# relaxed: Only warnings
# disabled: No protection (EMERGENCY ONLY)
DATABASE_SAFETY_LEVEL=strict
