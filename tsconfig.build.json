{
  "extends": "./tsconfig.json",
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "legacy",
    "**/*spec.ts",
    "**/*.e2e-spec.ts"
  ],
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/config/*": ["src/config/*"],
      "@/shared/*": ["src/shared/*"],
      "@/modules/*": ["src/modules/*"],
      "@/infrastructure/*": ["src/infrastructure/*"],
      "@/health/*": ["src/health/*"],
      "@/test/*": ["test/*"],
      "@/docs/*": ["docs/*"],
      "@/scripts/*": ["scripts/*"]
    }
  }
}
