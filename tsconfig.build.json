{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": false,
    "declaration": false,
    "incremental": false,
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "express"],
    "paths": {
      "@/*": ["src/*"],
      "@/config/*": ["src/config/*"],
      "@/shared/*": ["src/shared/*"],
      "@/modules/*": ["src/modules/*"],
      "@/infrastructure/*": ["src/infrastructure/*"],
      "@/health/*": ["src/health/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "legacy",
    "scripts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.e2e-spec.ts",
    "**/*.d.ts",
    "test/**/*"
  ]
}
