# Development Environment Configuration
# Copy this file to .env.development and update values

# Server Configuration
NODE_ENV=development
PORT=4000
HOST=localhost

# Database Configuration (Drizzle for development)
DATABASE_URL=postgresql://postgres:password@localhost:5432/km0_dev
DATABASE_ORM=drizzle

# Security (Development keys - DO NOT USE IN PRODUCTION)
JWT_SECRET=dev-jwt-secret-key-for-development-only-32-chars
COOKIE_SECRET=dev-cookie-secret-key-for-development-only-32-chars
JWT_EXPIRES_IN=7d

# Rate Limiting (More permissive for development)
THROTTLE_TTL=60
THROTTLE_LIMIT=1000

# CORS (Development origins)
CORS_ORIGIN=http://localhost:3000

# Logging (Verbose for development)
LOG_LEVEL=debug

# Development specific
SEED_ENABLED=true
SEED_DATA_PATH=./data/seed-dev.json
